<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      https://maven.apache.org/xsd/settings-1.0.0.xsd">

    <localRepository>~/.m2/repository/</localRepository>

    <servers>
        <server>
            <id>deploy-releases</id>
            <username>admin</username>
            <password>${MAVEN_ADMIN_PASSWORD}</password>
        </server>
        <server>
            <id>deploy-snapshots</id>
            <username>admin</username>
            <password>${MAVEN_ADMIN_PASSWORD}</password>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>nexus-central</id>
            <url>http://10.2.239.216:8081/repository/maven-releases/</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>build-private-repository</id>
            <repositories>
                <repository>
                    <id>build-snapshots</id>
                    <url>http://10.2.239.216:8081/repository/maven-snapshots/</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
                <repository>
                    <id>build-releases</id>
                    <url>http://10.2.239.216:8081/repository/maven-releases/</url>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>plugin-release</id>
                    <url>http://10.2.239.216:8081/repository/maven-releases/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                <pluginRepository>
                    <id>plugin-snapshots</id>
                    <url>http://10.2.239.216:8081/repository/maven-snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>build-private-repository</activeProfile>
    </activeProfiles>
</settings>